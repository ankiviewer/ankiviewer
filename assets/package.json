{
  "description": "npm deps for ankiviewer",
  "repository": {},
  "license": "MIT",
  "scripts": {
    "build": "npm run -s build:static && npm run -s build:css && npm run -s build:elm && npm run -s build:js",
    "build:static": "cp -R static/* ../priv/static",
    "build:css": "node-sass css/app.scss --output ../priv/static/css",
    "build:js": "rollup -c rollup.config.js",
    "build:elm": "$(npm config get prefix)/bin/elm-make elm/Main.elm --output js/elm.js --yes",
    "build:tests": "cd tests && $(npm config get prefix)/bin/elm-make Example.elm --output /dev/null --yes",
    "watch:static": "nodemon -e txt,ico,png,svg -x 'npm run -s build:static' -q",
    "watch:css": "node-sass css/app.scss --watch --output ../priv/static/css -q",
    "watch:js": "rollup -c rollup.config.js -w --silent",
    "watch:elm": "elm-live elm/Main.elm --output js/elm.js --yes",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "format": "elm-format elm tests --yes",
    "checkformat": "elm-format elm tests --validate",
    "test": "npm run -s checkformat && npm run -s test:elm",
    "test:elm": "elm-test",
    "test:js": "echo no js tests",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "elm": "^0.18.0",
    "node-sass": "^4.8.3",
    "rollup": "^0.57.1",
    "rollup-plugin-commonjs": "^9.1.0"
  },
  "devDependencies": {
    "cypress": "^2.1.0",
    "elm-format": "^0.6.1-alpha",
    "elm-live": "^2.7.5",
    "elm-test": "^0.18.12",
    "nodemon": "^1.17.2"
  }
}
